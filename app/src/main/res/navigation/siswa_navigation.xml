<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/siswa_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.kontakanprojects.apptkslb.view.siswa.home.HomeSiswaFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home_siswa">
        <action
            android:id="@+id/action_homeFragment_to_profileSiswaFragment"
            app:destination="@id/profileSiswaFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/action_homeFragment_to_chapterSiswaFragment"
            app:destination="@id/chapterSiswaFragment" />
    </fragment>
    <fragment
        android:id="@+id/soalFragment"
        android:name="com.kontakanprojects.apptkslb.view.siswa.soal.SoalFragment"
        android:label="SoalFragment">
        <action
            android:id="@+id/action_soalFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popUpTo="@id/videoIntroFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_soalFragment_to_resultFragment"
            app:destination="@id/resultFragment"
            app:popUpTo="@id/resultFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="idChapter"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="idChapterLevelSiswa"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="idNilai"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="idMapel"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/videoIntroFragment"
        android:name="com.kontakanprojects.apptkslb.view.siswa.introsoal.VideoIntroFragment"
        android:label="fragment_video_intro"
        tools:layout="@layout/fragment_video_intro">
        <action
            android:id="@+id/action_videoIntroFragment_to_soalFragment"
            app:destination="@id/soalFragment" />
        <argument
            android:name="idChapter"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="idChapterLevelSiswa"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="idNilai"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="idMapel"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.kontakanprojects.apptkslb.view.siswa.result.ResultFragment"
        android:label="fragment_result"
        tools:layout="@layout/fragment_result">
        <argument
            android:name="isFromHome"
            android:defaultValue="false"
            app:argType="boolean" />
        <argument
            android:name="idNilai"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="idChapter"
            android:defaultValue="0"
            app:argType="integer" />
        <argument
            android:name="idChapterLevelSiswa"
            android:defaultValue="0"
            app:argType="integer" />
        <action
            android:id="@+id/action_resultFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/profileSiswaFragment"
        android:name="com.kontakanprojects.apptkslb.view.siswa.profile.ProfileSiswaFragment"
        android:label="fragment_profile_siswa"
        tools:layout="@layout/fragment_profile_siswa" />
    <fragment
        android:id="@+id/chapterSiswaFragment"
        android:name="com.kontakanprojects.apptkslb.view.siswa.chapter.ChapterSiswaFragment"
        android:label="fragment_chapter_siswa"
        tools:layout="@layout/fragment_chapter_siswa">
        <action
            android:id="@+id/action_chapterSiswaFragment_to_videoIntroFragment"
            app:destination="@id/videoIntroFragment" />
        <action
            android:id="@+id/action_chapterSiswaFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
        <argument
            android:name="idMapel"
            android:defaultValue="0"
            app:argType="integer" />
    </fragment>
</navigation>